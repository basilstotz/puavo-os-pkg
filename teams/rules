#!/bin/sh

set -eu

command=$1
shift

add_disable_autostart() {
  cat <<'EOF' > /etc/X11/Xsession.d/65teams-disable-autostart
# teams creates this on every startup.
rm -f ~/.config/autostart/teams.desktop
EOF
}

teams_links='
  /usr/bin/teams
  /usr/share/applications/teams.desktop
  /usr/share/pixmaps/teams.png
  /usr/share/teams
'

case "${command}" in
  configure)
    upstream_dir=$1
    for f in $teams_links; do
      mkdir -p "$(dirname "$f")"
      ln -fns -T "${upstream_dir}${f}" "$f"
    done

    add_disable_autostart
    ;;
  unconfigure)
    rm -f $teams_links
    ;;
  unpack)
    upstream_pack=$1
    upstream_dir=$2

    dpkg -x "$upstream_pack" "$upstream_dir"
    ;;
  *)
    ;;
esac
