#!/bin/sh

set -eu

command=$1
shift

teams_links='
/usr/bin/teams
/usr/share/applications/teams.desktop
/usr/share/pixmaps/teams.png
/usr/share/teams
'

case "${command}" in
  configure)
    upstream_dir=$1
    for f in $teams_links; do
      mkdir -p "$(dirname "$f")"
      ln -fns -T "${upstream_dir}${f}" "$f"
    done
    ;;
  unconfigure)
    rm -rf $teams_links
    ;;
  unpack)
    upstream_pack=$1
    upstream_dir=$2

    dpkg -x "$upstream_pack" "$upstream_dir"
    ;;
  *)
    ;;
esac
