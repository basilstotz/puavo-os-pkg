#!/bin/sh

set -eu

command=$1
shift

case "${command}" in
    configure)
	upstream_dir=$1

	ln -fns "${upstream_dir}/usr/local/Globisens/" /usr/local/Globisens
	ln -fns "${upstream_dir}/usr/bin/GlobiConfig" /usr/bin/GlobiConfig
	ln -fns "${upstream_dir}/usr/bin/GlobiLab" /usr/bin/GlobiLab

	# no you silly, you can't put your own Qt libs in the system directories...
	ln -fns "${upstream_dir}/usr/local/lib/" /tmp/GlobisensQtLibs

	cat <<EOF > /usr/share/applications/GlobiLab.desktop
[Desktop Entry]
Name=GlobiLab
Exec=env LD_LIBRARY_PATH=/tmp/GlobisensQtLibs GlobiLab
Icon=${upstream_dir}/usr/share/icons/hicolor/48x48/apps/GlobiLab.png
Type=Application
Categories=GNOME;GTK;Science;
EOF
	;;
    unconfigure)
	rm -rf /usr/local/Globisens \
/tmp/GlobisensQtLibs \
/usr/bin/GlobiConfig \
/usr/bin/GlobiLab \
/usr/share/applications/GlobiLab.desktop
	;;
    unpack)
	upstream_pack=$1
	upstream_dir=$2

	dpkg -x "${upstream_pack}" "${upstream_dir}"
	;;
    *)
	;;
esac
