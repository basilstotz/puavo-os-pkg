#!/bin/sh

set -eu

command=$1
shift

case "${command}" in
  configure)
    upstream_dir=$1
    cp -Rs ${upstream_dir}/jonilehtola-ktpapi-*/dist /opt/ktpapi
    ;;
  unconfigure)
    rm -rf /opt/ktpapi
    ;;
  unpack)
    upstream_pack=$1
    upstream_dir=$2

    tar --no-same-owner -z -x -f "$upstream_pack" -C "$upstream_dir"
    (
      cd ${upstream_dir}/jonilehtola-ktpapi-*
      make
    )
    ;;
  *)
    ;;
esac
