#!/bin/sh

set -eu

command=$1
shift

case "${command}" in
    configure)
	upstream_dir=$1

	ln -fns "${upstream_dir}/usr/share/enchanting/" /usr/share/enchanting
	ln -fns "${upstream_dir}/usr/bin/enchanting" /usr/bin/enchanting
	ln -fns "${upstream_dir}/usr/bin/enchanting-frontend" /usr/bin/enchanting-frontend
	ln -fns "${upstream_dir}/usr/share/icons/hicolor/48x48/apps/enchanting.png" /usr/share/icons/hicolor/48x48/apps/enchanting.png
	ln -fns "${upstream_dir}/usr/share/mime/packages/enchanting.xml" /usr/share/mime/packages/enchanting.xml
	ln -fns "${upstream_dir}/etc/udev/rules.d/70-enchanting-lego-mindstorms-nxt.rules" /etc/udev/rules.d/70-enchanting-lego-mindstorms-nxt.rules

	# enchanting has its own .desktop file, but the icon file does not seem to work
	# unless we use a hardcoded path
        cat <<'EOF' > /usr/share/applications/enchanting.desktop
[Desktop Entry]
Encoding=UTF-8
Version=1.0
Type=Application
Exec=enchanting
Icon=/usr/share/icons/hicolor/48x48/apps/enchanting.png
Terminal=false
Name=Enchanting
Comment= Tool for programming LEGO Mindstorms NXT robots
Categories=Application;Education;Development;
MimeType=application/x-enchanting-project
EOF
	;;
    unconfigure)
	rm -rf /usr/share/enchanting \
/usr/bin/enchanting \
/usr/bin/enchanting-frontend \
/usr/share/applications/enchanting.desktop \
/usr/share/icons/hicolor/48x48/apps/enchanting.png \
/usr/share/mime/packages/enchanting.xml \
/etc/udev/rules.d/70-enchanting-lego-mindstorms-nxt.rules
	;;
    unpack)
	upstream_pack=$1
	upstream_dir=$2

	dpkg -x "${upstream_pack}" "${upstream_dir}"
	;;
    *)
	;;
esac
