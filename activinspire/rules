#!/bin/sh

set -eu

command=$1
shift

case "${command}" in
    configure)
	upstream_dir=$1

	ln -fns "${upstream_dir}" /opt/activinspire
        cat <<EOF > /usr/share/applications/activinspire.desktop
[Desktop Entry]
Name=ActivInspire
Categories=Education;
EOF
	;;
    unconfigure)
	rm -f /opt/activinspire \
              /usr/share/applications/cura-appimage.desktop
	;;
    unpack)
	upstream_pack=$1
	upstream_dir=$2

        cp "${upstream_pack}" "${upstream_dir}/Cura.AppImage"
        chmod 755 "${upstream_dir}/Cura.AppImage"
	;;
    *)
	;;
esac
