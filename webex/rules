#!/bin/sh

set -eu

command=$1
shift

case "${command}" in
    configure)
	upstream_dir=$1
	ln -fns "${upstream_dir}/opt/Webex" /opt/Webex
	ln -fns "${upstream_dir}/opt/Webex/bin/webex.desktop" /usr/share/applications/webex.desktop
	;;
    unconfigure)
        rm -rf /usr/share/applications/webex.desktop
	rm -rf /opt/Webex
	;;
    unpack)
	upstream_pack=$1
	upstream_dir=$2

	dpkg -x "${upstream_pack}" "${upstream_dir}"
	;;
    *)
	;;
esac
