#!/bin/sh

set -eu

command=$1
shift

symlink_targets='

'

case "${command}" in
    configure)
	upstream_dir=$1

        for symlink_target in ${symlink_targets}; do
            mkdir -p $(dirname "${symlink_target}")
            ln -fns -T "${upstream_dir}${symlink_target}" "${symlink_target}"
        done
	;;
    unconfigure)
        for symlink_target in ${symlink_targets}; do
            rm -f "${symlink_target}"
        done
	;;
    unpack)
	upstream_pack=$1
	upstream_dir=$2

        debversion=''
        debfile=""

        tar -O -zxf "$upstream_pack" "$debfile" \
          | dpkg-deb -x - "$upstream_dir"
	;;
    *)
	;;
esac
